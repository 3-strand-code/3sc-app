{
  "name": "3sc-app",
  "version": "1.0.0",
  "description": "3 Strand Code's frontend.",
  "main": "index.js",
  "scripts": {
    "clean": "while read line; do rm -rf ./$line; done < .gitignore",
    "clean:dist": "rm -rf dist",
    "compile": "better-npm-run compile",
    "compile:assets": "cp -r src/assets dist",
    "dev": "better-npm-run dev",
    "karma": "better-npm-run karma",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "lint:styles": "sass-lint -v",
    "lint:watch": "watch 'npm run lint --silent' build config bin src test",
    "start": "npm run dev",
    "test": "npm run karma -- --coverage",
    "test:watch": "npm run karma -- --watch"
  },
  "betterScripts": {
    "compile": {
      "command": "npm run clean:dist && babel-node bin/compile && npm run compile:assets",
      "env": {
        "DEBUG": "app:*"
      }
    },
    "dev": {
      "command": "babel-node bin/server --hot",
      "env": {
        "DEBUG": "app:*",
        "NODE_ENV": "development"
      }
    },
    "karma": {
      "command": "babel-node ./node_modules/karma/bin/karma start build/karma.conf",
      "env": {
        "DEBUG": "app:*",
        "NODE_ENV": "test"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/3-strand-code/3sc-app.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/3-strand-code/3sc-app/issues"
  },
  "homepage": "https://github.com/3-strand-code/3sc-app#readme",
  "dependencies": {
    "autobind-decorator": "^1.3.2",
    "axios": "^0.8.1",
    "bluebird": "^3.1.1",
    "classnames": "^2.2.1",
    "debug": "^2.2.0",
    "faker": "^3.0.1",
    "history": "^1.17.0",
    "invariant": "^2.2.0",
    "jquery": "^2.1.4",
    "local-sync": "^1.0.2",
    "lodash": "^3.10.1",
    "moment": "^2.11.0",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-redux": "^4.0.6",
    "react-router": "^1.0.3",
    "redux": "^3.0.5",
    "redux-localstorage": "^1.0.0-rc4",
    "redux-localstorage-filter": "^0.1.1",
    "redux-simple-router": "^1.0.2",
    "redux-thunk": "^1.0.3",
    "stardust": "^0.10.2"
  },
  "devDependencies": {
